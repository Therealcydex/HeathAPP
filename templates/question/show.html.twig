{% extends 'base.html.twig' %}

{% block title %}Question Details{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <div class="clearfix">
                <h4 class="card-title">Question Details</h4>
            </div>

            <div class="chartjs-size-monitor">
                <div class="chartjs-size-monitor-expand"><div class=""></div></div>
                <div class="chartjs-size-monitor-shrink"><div class=""></div></div>
            </div>

            <table class="table table-bordered mt-3">
                <tbody>
                    <tr>
                        <th>Quiz</th>
                        <td>{{ question.quiz.name }}</td>
                    </tr>
                    <tr>
                        <th>Question</th>
                        <td>{{ question.text }}</td>
                    </tr>
                </tbody>
            </table>

            <!-- Buttons Section (Properly Aligned) -->
            <div class="d-flex justify-content-between align-items-center mt-4">
                <!-- Back to List (Bottom Left) -->
                <a href="{{ path('app_question_index') }}" class="btn btn-secondary">
                    <i class="mdi mdi-arrow-left"></i> Back to List
                </a>

                <!-- Edit & Delete (Bottom Right) -->
                <div class="d-flex">
                    <a href="{{ path('app_question_edit', {'id': question.id}) }}" class="btn btn-warning me-2">
                        <i class="mdi mdi-pencil"></i> Edit
                    </a>

                    {{ include('question/_delete_form.html.twig', { 'button_class': 'btn btn-danger' }) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
