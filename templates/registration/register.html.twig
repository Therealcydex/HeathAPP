{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="mb-4 text-center">Register</h1>
            <div class="card shadow p-4">
                
                <!-- Flash Error Messages -->
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                <!-- Email Field -->
                <div class="mb-3">
                    {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                </div>

                <!-- Password Field -->
                <div class="mb-3">
                    {{ form_label(registrationForm.plainPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                </div>

                <!-- Agree Terms Checkbox -->
                <div class="mb-3 form-check d-flex align-items-center">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input me-2'}}) }}
                    {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label mb-0'}}) }}
                </div>

                <!-- Identity Card Upload -->
                <div class="mb-3">
                    {{ form_label(registrationForm.identityCard, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.identityCard, {'attr': {'class': 'form-control'}}) }}
                </div>

                <!-- Diploma Upload -->
                <div class="mb-3">
                    {{ form_label(registrationForm.diploma, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.diploma, {'attr': {'class': 'form-control'}}) }}
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary w-100">Register</button>

                {{ form_end(registrationForm, {'render_rest': false}) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
