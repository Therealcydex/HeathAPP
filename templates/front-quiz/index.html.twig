{% extends 'base-front.html.twig' %}

{% block title %}Select a Quiz{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5"> {# Added mb-5 for bottom spacing #}
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <h3 class="card-title text-center mb-4">
                            <i class="mdi mdi-book-open-variant"></i> Select a Quiz
                        </h3>

                        <div class="list-group">
                            {% for quiz in quizzes %}
                                <a href="{{ path('app_front_quiz_take', {'id': quiz.id}) }}" 
                                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center quiz-item">
                                    <span>
                                        <i class="mdi mdi-play-circle text-primary"></i> 
                                        <strong>{{ quiz.name }}</strong>
                                    </span>
                                    <span class="badge bg-primary text-white rounded-pill">
                                        {{ quiz.type.value|capitalize }}
                                    </span>
                                </a>
                            {% else %}
                                <div class="alert alert-warning text-center" role="alert">
                                    <i class="mdi mdi-alert-circle"></i> No quizzes available.
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .quiz-item {
            font-size: 1.1rem;
            padding: 15px;
            transition: all 0.3s ease-in-out;
            border-radius: 8px;
        }

        .quiz-item:hover {
            background: #f8f9fa;
            transform: scale(1.02);
        }

        .badge {
            font-size: 0.9rem;
            padding: 8px 12px;
        }

        .card {
            border-radius: 12px;
            overflow: hidden;
        }

        /* Ensures space between card and footer */
        .container {
            padding-bottom: 60px; 
        }
    </style>
{% endblock %}
