{% extends 'base.html.twig' %}

{% block title %}Quiz Index{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <div class="clearfix">
                <h4 class="card-title float-left">Quiz List</h4>
                <a href="{{ path('app_quiz_new') }}" class="btn btn-gradient-primary float-right">
                    <i class="mdi mdi-plus"></i> Create New Quiz
                </a>
            </div>

            <div class="table-responsive mt-4">
                <table class="table table-hover w-100" style="table-layout: fixed;">
                    <colgroup>
                        <col style="width: 40%;"> {# Quiz Name #}
                        <col style="width: 30%;"> {# Quiz Type #}
                        <col style="width: 30%;"> {# Actions #}
                    </colgroup>
                    <thead class="table-light">
                        <tr>
                            <th>Quiz Name</th>
                            <th>Quiz Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for quiz in quizzes %}
                            <tr>
                                <td class="text-truncate">{{ quiz.name }}</td>
                                <td class="text-truncate">{{ quiz.type.value }}</td>
                                <td>
                                    <a href="{{ path('app_quiz_show', {'id': quiz.id}) }}" class="btn btn-info btn-sm">
                                        <i class="mdi mdi-eye"></i> Show
                                    </a>
                                    <a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}" class="btn btn-warning btn-sm">
                                        <i class="mdi mdi-pencil"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3" class="text-center">No quizzes found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
