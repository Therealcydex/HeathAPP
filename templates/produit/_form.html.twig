                    <small class="form-text text-muted">{{ form_errors(form.image) }}</small>
                {% endif %}
            </div>
        </div>
        
        <div align="center" class="card-footer">
            <button class="btn btn-sm btn-primary"><i class="zmdi zmdi-plus"></i>{{ button_label|default('Ajouter') }}</button>
            <button class="btn btn-sm btn-outline-secondary"><a style="color:black;" href="{{ path('app_produit_index') }}">Consulter Liste</a></button>
        </div>
    {{ form_end(form) }}
</div>



