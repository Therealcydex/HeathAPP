<form method="post" action="{{ path('app_answer_delete', {'id': answer.id}) }}" onsubmit="return confirm('Are you sure you want to delete this answer?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ answer.id) }}">
    <button type="submit" class="{{ button_class|default('btn btn-danger') }}">
        <i class="mdi mdi-delete"></i> Delete
    </button>
</form>
